<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/publicacaoFoto"
            android:layout_width="153dp"
            android:layout_height="95dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic[11]" />

        <TextView
            android:id="@+id/publicacaoDataHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="52dp"
            android:text="DataHora"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/publicacaoNome"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Nome"
            app:layout_constraintEnd_toStartOf="@+id/publicacaoDataHora"
            app:layout_constraintHorizontal_bias="0.617"
            app:layout_constraintStart_toEndOf="@+id/publicacaoFoto"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/publicacaoTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="texto da publicacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toEndOf="@+id/publicacaoFoto"
            app:layout_constraintTop_toBottomOf="@+id/publicacaoDataHora" />

        <TextView
            android:id="@+id/publicacaoLikeCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="188dp"
            android:layout_marginTop="8dp"
            android:text="100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/publicacaoLikeButton" />

        <Button
            android:id="@+id/publicacaoLikeButton"
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:text="L"
            app:layout_constraintEnd_toStartOf="@+id/publicacaoDislikeButton"
            app:layout_constraintStart_toEndOf="@+id/publicacaoFoto"
            app:layout_constraintTop_toBottomOf="@+id/publicacaoTexto"
            tools:text="L" />


        <TextView
            android:id="@+id/publicacaoDislikeCounter"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="65dp"
            android:text="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/publicacaoDislikeButton" />

        <Button
            android:id="@+id/publicacaoDislikeButton"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:text="D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/publicacaoLikeButton"
            app:layout_constraintTop_toBottomOf="@+id/publicacaoTexto" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>